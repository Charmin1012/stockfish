{
  "name": "chess-trainer-stockfish",
  "version": "1.0.0",
  "description": "6-Move Chess Training Environment with Stockfish Engine",
  "main": "src/main/main.js",
  "author": "Chess Trainer",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run start-renderer\" \"npm run start-electron\"",
    "start-renderer": "webpack serve --mode development --config webpack.config.js",
    "start-electron": "wait-on http://localhost:3000 && electron .",
    "build": "webpack --mode production",
    "build-app": "npm run build && electron-builder",
    "dev": "concurrently \"npm run start-renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "package-win": "electron-builder --win",
    "package-mac": "electron-builder --mac",
    "package-linux": "electron-builder --linux"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "chess.js": "^1.0.0-beta.6",
    "lucide-react": "^0.263.1",
    "node-pty": "^0.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.chesstrainer.stockfish",
    "productName": "Chess Trainer Stockfish",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "binaries/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "binaries/",
        "to": "binaries/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}